def project = 'synetic-k8s-poc'
def appName = 'php-poc'
def feSvcName = "${appName}"
def imageTag = "gcr.io/${project}/${appName}:${env.BUILD_NUMBER}"

pipeline {
  agent {
    kubernetes {
      label "${appName}-jenkins"
      defaultContainer 'jnlp'
      yaml """
apiVerson: v1
kind: Pod
metadata:
labels:
  component: agents
spec:
  # Use service account that can deploy to all namespaces
  containers:   
  - name: kubectl
    image: gcr.io/cloud-builders/kubectl
    command:
    - cat
    tty: true
  - name: gcloud
    image: google/cloud-sdk
    stage: imagecreation
    script:
      - docker build -t gcr.io/project-test-to/counter .
      - gcloud docker -- push gcr.io/project-test-to/counter
    volume:
      - "/var/run/docker.sock:/var/run/docker.sock"     
"""
    }
  }
  stages {

    stage('Build image') {
      steps {
        container('gcloud') {
          sh "docker build -t ${imageTag} ."
        }
      }
    }

    stage('Upload image to registry') {
      steps {
        container('gcloud') {
          sh "gcloud docker --authorize-only"
          sh "docker push  ${imageTag}"
        }
      }
    }

    stage('Test') {
      steps {
        container('gcloud') {
          echo "testing ${imageTag}"
        }
      }
    }

  }
}